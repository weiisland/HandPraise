<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_listView_calendar_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入：100元 ；支出： 50元"/>

        <TextView
            android:id="@+id/tv_listView_calendar_item_comment"
            android:layout_below="@+id/tv_listView_calendar_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："/>

        <Button
            android:id="@+id/bt_listView_item_delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:background="@drawable/btn_selector"
            android:padding="5dp"
            android:visibility="gone"/>


    </RelativeLayout>



</LinearLayout>
